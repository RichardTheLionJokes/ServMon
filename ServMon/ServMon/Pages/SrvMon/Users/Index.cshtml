@page
@model ServMon.Pages.SrvMon.Users.IndexModel

@{
    ViewData["Title"] = "AmGPGU IT";
}

<h1 class="p-4">Users</h1>

<p>
    <a class="btn btn-teal" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.userPList[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userPList[0].PrintName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userPList[0].Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userPList[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userPList[0].Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.userPList)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrintName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{
    var prevDisabled = !Model.userPList.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.userPList.HasNextPage ? "disabled" : "";
    var decreaseDisabled = Model.userPList.PageSize == 10 ? "disabled" : "";
    var increaseDisabled = (Model.userPList.PageSize == 50 || Model.userPList.TotalPages == 1) ? "disabled" : "";
}

<div class="btn-group">
    <a class="btn btn-teal @prevDisabled" href="/SrvMon/Users/Index?pageIndex=@(Model.userPList.PageIndex - 1)&pageSize=@(Model.userPList.PageSize)">
        Previous
    </a>
    <a class="btn btn-teal @nextDisabled" href="/SrvMon/Users/Index?pageIndex=@(Model.userPList.PageIndex + 1)&pageSize=@(Model.userPList.PageSize)">
        Next
    </a>
</div>
<div class="btn-group">
    <a class="btn btn-teal @decreaseDisabled" href="/SrvMon/Users/Index?pageIndex=1&pageSize=@(Model.userPList.PageSize - 10)">
        -10
    </a>
    <a class="btn btn-teal @increaseDisabled" href="/SrvMon/Users/Index?pageIndex=1&pageSize=@(Model.userPList.PageSize + 10)">
        +10
    </a>
</div>