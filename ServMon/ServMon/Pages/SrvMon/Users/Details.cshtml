@page
@model ServMon.Pages.SrvMon.Users.DetailsModel

@{
    ViewData["Title"] = "AmGPGU IT";
    string servName;
}

<div>
    <h4 class="p-4">Details of user</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.PrintName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.PrintName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Position)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Servers)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.User.Servers)
            {
                servName = !string.IsNullOrEmpty(item.Name) ? item.Name : item.IpAddress;
                @Html.DisplayFor(modelItem => servName)
                <br />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.User?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
