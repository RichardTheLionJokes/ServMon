@page
@model ServMon.Pages.SrvMon.Servers.DetailsModel

@{
    ViewData["Title"] = "AmGPGU IT";
}

<div>
    <h4 class="p-4">Details of server</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Server.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Server.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Server.IpAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Server.IpAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Server.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Server.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Server.ShortDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Server.ShortDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Server.Activity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Server.Activity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Server.CurrentStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Server.CurrentStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Server.Users)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.Server.Users)
            {
                @Html.DisplayFor(modelItem => item.Name)
                <br />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Server?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
